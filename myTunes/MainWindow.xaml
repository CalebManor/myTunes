<Window x:Class="myTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="831.5">
    <Grid>
        <DataGrid x:Name="musicDataGrid" HorizontalAlignment="Right" Height="300" Margin="185,55,10,0" VerticalAlignment="Top" Width="599" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding title}" Header="Title"/>
                <DataGridTextColumn Binding="{Binding artist}" Header="Artist" Width="150"/>
                <DataGridTextColumn Binding="{Binding album}" Header="Album" Width="150"/>
                <DataGridTextColumn Binding="{Binding genre}" Header="Genre" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox x:Name="playListBox" HorizontalAlignment="Left" Height="300" Margin="45,55,0,0" VerticalAlignment="Top" Width="117">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
